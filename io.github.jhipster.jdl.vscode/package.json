{
    "name": "jdl",
    "displayName": "jdl",
    "description": "JDL VS Code extension",
    "version": "0.0.1",
    "publisher": "jhipster",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:jdl"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [{
            "id": "jdl",
            "aliases": ["jdl"],
            "extensions": [".jdl", "jh"],
            "configuration": "./jdl.configuration.json"
        }],
        "grammars": [{
            "language": "jdl",
            "scopeName": "text.jdl",
            "path": "./jdl.tmLanguage"
        }]
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^1.8.5",
        "vscode": "^0.11.0"
    },
    "dependencies": {
        "vscode-languageclient": "^2.2.1"
    }
}
